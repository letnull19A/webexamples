mixin ImagePreview(size, path, frames, height, speed)
    div(class="preview-card size-" + size)
        span(class="preview__float-text") float text
        canvas(class="preview__image-canvas", data-speed=speed, data-path=path, data-frames=frames, data-height=height)
            img(src="", class="preview__image" style="width: 100%; height: 100%;")

div(class="row")
    +ImagePreview("large", "a", 146, 130, 1)
div(class="row")
    +ImagePreview("mini", "c", 52, 470, 0.2)
    +ImagePreview("middle", "f", 61, 450, 0.1)
div(class="row")
    +ImagePreview("middle", "h", 40, 700, 0.1)
    +ImagePreview("mini", "d", 85, 770, 0.1)
div(class="row")
    +ImagePreview("half", "e", 117, 770, 0.1);